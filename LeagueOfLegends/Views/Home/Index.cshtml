@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    @using (Html.BeginForm("Profile", "Home", FormMethod.Get))
    {
        <div class="input-field col s6">
            <input id="summonerName" name="sName" type="text" class="validate" placeholder="Enter a summoner name">
            <label for="summonerName">Summoner Lookup</label>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">
            Search
            <i class="material-icons right">send</i>
        </button>
    }
    <p>@ViewBag.message</p>
</div>