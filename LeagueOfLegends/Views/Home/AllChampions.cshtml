@using LeagueOfLegends.Models
@using System.Data.SqlClient;

@{
    ViewBag.Title = "AllChampions";
}

<div id="championAnalytics">
    <div id="particles-js3" class="particles-positioning"></div>
    <div class="overlay" style="background-color: #1f1f1f80;">
        <div id="championListContainer">
            <div class="header-block">
                <h4>Scroll to See All Champions</h4>
            </div>
            <div class="body-block">
                <table class="table table-hover">
                    <tbody style="background-color: #4040409e;">
                        @foreach (Tuple<int, String, String, String> item in Model)
                        {
                            <tr class="picture-tile" scope="row" value=@item.Item1>
                                <td>
                                    <img src="~/Images/Champions/Icon/@item.Item4" />
                                </td>
                                <td>
                                    <h6>@item.Item2, @item.Item3</h6>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div id="championDataContainer">
        </div>
    </div>
    <div class="screenLoader" style="display: none;">
        <div class="loader"></div>
        <div class="loaderText">Gathering Data</div>
    </div>
</div>
<script>loadParticles("particles-js3");</script>